<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"
    android:background="@color/color_7FFFFFFF">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="8dp"
        app:cardUseCompatPadding="true"
        android:background="@color/colorPureWhite">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_face"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                android:layout_marginStart="15dp"/>

            <TextView
                android:id="@+id/tv_attr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/iv_face"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@id/iv_face"
                android:text="@string/init_str"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_faceid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@id/iv_face"
                android:layout_below="@id/tv_attr"
                android:layout_marginTop="5dp"
                android:text="@string/init_str"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_interval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@id/iv_face"
                android:layout_below="@id/tv_faceid"
                android:layout_marginTop="5dp"
                android:text="@string/init_str"
                android:textStyle="bold"/>


            <TextView
                android:id="@+id/tv_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_face"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@id/iv_face"
                android:text="@string/init_str" />

            <TextView
                android:id="@+id/tv_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_face"
                android:layout_toEndOf="@id/tv_gender"
                android:layout_marginStart="50dp"
                android:text="@string/init_str" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>